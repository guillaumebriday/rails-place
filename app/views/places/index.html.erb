<%= turbo_stream_from 'place' %>

<h1 class="flex items-center justify-center gap-2 mt-1 mb-5 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl">
  <%= image_tag 'logo.svg', class: 'max-h-10 mr-6' %>
  r/Place on

  <%= image_tag 'rails-logo.svg', class: 'max-h-10' %>
</h1>

<div class="grid grid-cols-[repeat(<%= MAP_SIZE %>,minmax(0,1fr))] max-w-2xl">
  <%= render partial: "places/block", collection: @keys, as: :key %>
</div>

<%= render 'places/colors' %>


<div class="text-left mt-10">
  <h2 class="text-2xl font-bold mb-3">
    🧑‍⚖️  Rules
  </h2>

  <ul class="list-disc pl-5">
    <li>Only <strong>20 moves per minute</strong>.</li>
  </ul>
</div>
